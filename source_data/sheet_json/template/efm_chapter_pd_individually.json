{
  "flow_type": "template",
  "flow_name": "efm_chapter_pd_individually",
  "status": "released",
  "rows": [
    {
      "name": "efm_chapter",
      "value": "@@fields.current_chapter",
      "comments": "List out the learning steps in this chapter"
    },
    {
      "name": "efm_chapter_title",
      "value": "@local.efm_chapter.title"
    },
    {
      "type": "title",
      "name": "chapter_title",
      "value": "@local.efm_chapter_title"
    },
    {
      "type": "begin_items",
      "name": "activity_buttons",
      "value": "@data.efm_pd_list"
    },
    {
      "name": "ok_chapter",
      "value": "@item.chapter==@local.efm_chapter.number",
      "exclude_from_translation": true
    },
    {
      "type": "button",
      "name": "button_activities",
      "value": "@item.title",
      "action_list": "click | set_field:current_pd: data.efm_pd.@item.id;\nclick | go_to: efm_pd_template",
      "condition": "@local.ok_chapter",
      "parameter_list": "style: short; \ntext_align: center"
    },
    {
      "type": "end_items"
    }
  ]
}