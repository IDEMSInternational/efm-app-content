{
  "flow_type": "template",
  "flow_name": "efm_mls_template",
  "status": "released",
  "rows": [
    {
      "name": "efm_mls_ptr",
      "value": "@@fields.current_mls"
    },
    {
      "name": "template_text",
      "value": "_template"
    },
    {
      "name": "mls_title",
      "value": "@local.efm_mls_ptr.title"
    },
    {
      "name": "mls_id",
      "value": "@local.efm_mls_ptr.id"
    },
    {
      "name": "local_false",
      "value": false
    },
    {
      "name": "next_mls",
      "value": "@local.false"
    },
    {
      "name": "prev_mls",
      "value": "@local.false"
    },
    {
      "name": "has_mls_been_seen",
      "value": "@local.false"
    },
    {
      "name": "do_ids_match",
      "value": "@local.false"
    },
    {
      "name": "chapter",
      "value": "Stage"
    },
    {
      "type": "text",
      "name": "chapter_section",
      "value": "@local.chapter @local.efm_mls_ptr.chapter",
      "parameter_list": "text_align: center;\nstyle: small",
      "exclude_from_translation": true
    },
    {
      "type": "begin_items",
      "name": "find_next_and_prev",
      "value": "@data.efm_mls",
      "comments": "Cycle through all activities to find the previous and next activities of an ok_type"
    },
    {
      "name": "do_ids_match",
      "value": "@item.id == @local.mls_id",
      "exclude_from_translation": true
    },
    {
      "name": "has_mls_been_seen",
      "value": "@local.has_mls_been_seen || @local.do_ids_match",
      "exclude_from_translation": true
    },
    {
      "name": "prev_mls",
      "value": "data.efm_mls.@item.id",
      "condition": "!@local.do_ids_match && !@local.has_mls_been_seen",
      "comments": "The previous activity keeps being updated with ok_type activities until we have matching titles.",
      "exclude_from_translation": true
    },
    {
      "name": "next_mls",
      "value": "data.efm_mls.@item.id",
      "condition": "!@local.do_ids_match && @local.has_mls_been_seen && !@local.next_mls",
      "comments": "The next_activity should be the very first activity of ok_type after we have matching titles.",
      "exclude_from_translation": true
    },
    {
      "type": "end_items"
    },
    {
      "type": "begin_display_group",
      "style_list": "margin-top: -8px;"
    },
    {
      "type": "button",
      "name": "prev_button_1",
      "value": "<",
      "action_list": "click | set_field:current_mls:@local.prev_mls;\nclick | emit:force_reload",
      "condition": "@local.prev_mls",
      "parameter_list": "style: short;\ntext_align: center",
      "style_list": "flex: 30",
      "exclude_from_translation": true
    },
    {
      "type": "text",
      "name": "left_spacer",
      "condition": "!@local.prev_mls",
      "style_list": "flex: 30"
    },
    {
      "type": "text",
      "name": "title",
      "value": "@local.mls_title",
      "parameter_list": "text_align: center;\nstyle: large emphasised",
      "style_list": "flex: 300"
    },
    {
      "type": "button",
      "name": "next_button_1",
      "value": "\\>",
      "action_list": "click | set_field:current_mls:@local.next_mls;\nclick | emit:force_reload",
      "condition": "@local.next_mls",
      "parameter_list": "style: short;\ntext_align: center",
      "style_list": "flex: 30",
      "exclude_from_translation": true
    },
    {
      "type": "text",
      "name": "right_spacer",
      "condition": "!@local.next_mls",
      "style_list": "flex: 30"
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "begin_template",
      "name": "activity_body_generator",
      "value": "efm_mls_body_template"
    },
    {
      "name": "efm_mls_a_ptr",
      "value": "@local.efm_mls_ptr"
    },
    {
      "type": "end_template"
    }
  ]
}